import gspread
import json
import os
import time

# --- CONFIGURAÇÃO ---
NOME_DA_TABELA = "CyberAgro_Precos"
# !!! ATENÇÃO !!!
# Verifique o nome da sua aba. O erro anterior era "Sheet1 (2)".
# Se você importou o CSV, o nome padrão é "Sheet1" ou o nome do ficheiro.
NOME_DA_ABA = "Sheet1" # <-- VERIFIQUE SE ESTE É O NOME REAL DA SUA ABA
JSON_PATH = "mango_prices.json"
# --------------------

try:
    key_content = os.environ.get('GCP_SA_KEY')
    if not key_content:
        raise ValueError("Secret GCP_SA_KEY não encontrado.")
    
    with open("gcp_key.json", "w") as f:
        f.write(key_content)
    
    gc = gspread.service_account(filename="gcp_key.json")
    print("Autenticação com Google Sheets bem-sucedida.")

    sh = gc.open(NOME_DA_TABELA)
    worksheet = sh.worksheet(NOME_DA_ABA) # Abre a aba pelo nome
    
    print(f"A ler a tabela '{NOME_DA_TABELA}' (Aba: {NOME_DA_ABA})...")
    
    # Pega todos os valores da tabela
    lista_de_listas = worksheet.get_all_values()
    
    if len(lista_de_listas) <= 1:
        raise ValueError("Nenhum dado encontrado (apenas o cabeçalho).")
        
    headers = lista_de_listas[0] # Linha 1 = Cabeçalhos

    # --- MODIFICAÇÃO PRINCIPAL ---
    # A Linha 2 (primeira linha de dados) está no índice 1
    if len(lista_de_listas) < 2:
        raise ValueError("A tabela não tem uma segunda linha (primeira linha de dados).")
        
    data_row = lista_de_listas[1] # Pega a SEGUNDA linha
    # -----------------------------
    
    # Mapeia os cabeçalhos para os dados da linha 2
    dados = dict(zip(headers, data_row))

    # Valida as colunas (baseado nos seus cabeçalhos)
    if 'Preço' not in dados or 'Produto' not in dados:
        raise ValueError("Colunas 'Preço' ou 'Produto' em falta na tabela.")

    # Assume um peso padrão se a coluna 'Peso_Medio_G' não existir
    PESO_MEDIO_FALLBACK = 500 
    
    preco_limpo = float(str(dados.get('Preço', 0)).replace(",", "."))
    peso_limpo = int(dados.get('Peso_Medio_G', PESO_MEDIO_FALLBACK))
    
    # Formata a data a partir das colunas separadas
    data_str = f"{dados.get('Dia')}/{dados.get('Mês')}/{dados.get('Ano')}"

    novos_dados = {
        "preco_kg": preco_limpo,
        "peso_medio_g": peso_limpo,
        "fonte": dados.get('Região', 'Google Sheets') + f" ({data_str})",
        "ultima_atualizacao": time.strftime("%Y-%m-%dT%H:%M:%SZ", time.gmtime())
    }

    print(f"Dados encontrados (Linha 2): {dados.get('Produto')} - Preço R${novos_dados['preco_kg']}, Peso {novos_dados['peso_medio_g']}g")
    with open(JSON_PATH, 'w', encoding='utf-8') as f:
        json.dump(novos_dados, f, indent=2, ensure_ascii=False)
    print("Ficheiro mango_prices.json atualizado com sucesso.")

except Exception as e:
    print(f"Erro fatal: {e}")
    # Cria um JSON de fallback se tudo falhar
    if not os.path.exists(JSON_PATH):
        fallback_data = { "preco_kg": 0, "peso_medio_g": 500, "fonte": "Erro ao ler Google Sheet", "ultima_atualizacao": "N/A" }
        with open(JSON_PATH, 'w', encoding='utf-8') as f:
            json.dump(fallback_data, f, indent=2, ensure_ascii=False)
    raise e
finally:
    # Limpa a chave temporária
    if os.path.exists("gcp_key.json"):
        os.remove("gcp_key.json")
